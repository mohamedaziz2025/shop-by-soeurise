# Environment
NODE_ENV=development

# Server
PORT=4000
API_PREFIX=api/v1

# Database
MONGODB_URI=mongodb://mongodb:27017/soeurise

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CONNECT_CLIENT_ID=ca_your_connect_client_id

# Platform Commission (en pourcentage)
PLATFORM_COMMISSION_RATE=20

# Email (Ã  configurer selon votre provider)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=noreply@soeurise.com
MAIL_PASSWORD=your_mail_password
MAIL_FROM=Soeurise <noreply@soeurise.com>

# Frontend URL
FRONTEND_URL=http://frontend:3000

# Upload
MAX_FILE_SIZE=5242880
UPLOAD_DEST=./uploads

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
